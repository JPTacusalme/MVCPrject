@model IEnumerable<MVCPrject.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="container-fluid p-0">


    <!-- Header Navigation -->
    <div class="border-bottom shadow-sm d-flex flex-row align-items-center justify-content-end gap-4 p-2">
        <div>
            <h1 class="position-absolute top-0 start-50 translate-middle-x">Explore Recipe</h1>
        </div>
        <i data-feather="search"
           class="border p-3 rounded-pill fs-2"
           style="background-color: #D9D9D980; width: 36px; height: 36px;">
        </i>


        <h2 class="fs-5">
            Hello, <span>Username</span>
        </h2>

        <img src="~/img/image.png"
             alt="/"
             class="border rounded-pill"
             style="width: 48px;">
    </div>

    <!-- Main Content Container -->
    <div class="overflow-auto" style="height: calc(100vh - 64px);">
        <div class="container mt-3">
            <h1 class="text-center mb-4">All Recipes</h1>

            <!-- Search Bar -->
            <div class="row mb-4">
                <div class="col-md-6 offset-md-3">
                    <form asp-controller="Recipe" asp-action="Search" method="get" class="input-group">
                        <input type="text" name="keywords" class="form-control"
                               placeholder="Search For recipe, users, posts, ingredients....." />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>

                <!-- Recipe Filter Navigation - Simple Version -->
                <div class="mb-4">
                    <button onclick="addKeyword('Dinner')" class="btn btn-warning btn-sm">Dinner</button>
                    <button onclick="addKeyword('Main Course')" class="btn btn-warning btn-sm">Main Course</button>
                    <button onclick="addKeyword('Dessert')" class="btn btn-warning btn-sm">Dessert</button>
                    <button onclick="addKeyword('Breakfast')" class="btn btn-warning btn-sm">Breakfast</button>
                    <button onclick="addKeyword('Lunch')" class="btn btn-warning btn-sm">Lunch</button>
                    <button onclick="addKeyword('Snack')" class="btn btn-warning btn-sm">Snack</button>
                    <button onclick="addKeyword('Appetizer')" class="btn btn-warning btn-sm">Appetizer</button>
                    <button onclick="addKeyword('Side Dish')" class="btn btn-warning btn-sm">Side Dish</button>
                    <button onclick="addKeyword('Soup')" class="btn btn-warning btn-sm">Soup</button>
                    <button onclick="addKeyword('Salad')" class="btn btn-warning btn-sm">Salad</button>
                    <button onclick="addKeyword('Healthy')" class="btn btn-warning btn-sm">Healthy</button>
                    <button onclick="addKeyword('Vegetarian')" class="btn btn-warning btn-sm">Vegetarian</button>
                    <button onclick="addKeyword('Vegan')" class="btn btn-warning btn-sm">Vegan</button>
                    <button onclick="addKeyword('Comfort Food')" class="btn btn-warning btn-sm">Comfort Food</button>

                    <button onclick="clearFilters()" class="btn btn-outline-secondary btn-sm">Clear All</button>
                </div>

                <script>
                    function addKeyword(keyword) {
                        var keywords = new URLSearchParams(window.location.search).get('keywords') || '';
                        var list = keywords ? keywords.split(',') : [];

                        if (!list.includes(keyword)) {
                            list.push(keyword);
                            window.location.href = '/Recipe/Search?keywords=' + list.join(',');
                        }
                    }

                    function clearFilters() {
                        window.location.href = '/Recipe/Search';
                    }
                </script>


                @if (!Model.Any())
                {
                    <!-- Empty State -->
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h4 class="card-title">No Recipes Available</h4>
                                    <p class="card-text">No recipes available at the moment.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {


                    <!-- Recipe Grid -->
                    <div class="row">
                        @foreach (var recipe in Model)
                        {
                            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                                <div class="card h-100">
                                    <img class="card-img-top"
                                         src="@recipe.RecipeImage"
                                         alt="@recipe.RecipeName"
                                         style="height: 200px; object-fit: cover;">

                                    <div class="card-body d-flex flex-column">
                                        <h4 class="card-title">@recipe.RecipeName</h4>
                                        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.RecipeID">View Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
