@model MVCPrject.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MVCPrject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/UserLogin.css" />
</head>

<body style="overflow-y: hidden;">
    <div style="height: 100vh;" class="position-relative">
        <div class="ellipse-1 position-absolute"></div>
        <div class="ellipse-2 position-absolute"></div>
        <div class="ellipse-3 position-absolute"></div>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid px-custom pt-5">
                <a class="navbar-brand" asp-controller="Landing" asp-action="Index">
                    <img src="~/img/logo.png" alt="Logo" class="w-100" />
                </a>
                <div class="d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav d-flex flex-row gap-5 fs-5 fw-bold">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Landing" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Landing" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Landing" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Landing" asp-action="Login">Log in</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="hero-container transition-container">
            <div class="hero-left">
                <img src="~/img/login-img.png" alt="Hero Cook" class="hero-img img-fluid align-content-center" />
            </div>

            <div class="hero-right">
                <div class="form-wrapper bg-light rounded-4 p-5 text-center">
                    <div id="formContent" class="form-content">
                        <h2 class="fw-bold mb-4">Welcome Back!</h2>

                        <form asp-action="Login" asp-controller="Landing" method="post"
                            class="d-flex flex-column justify-content-between h-100">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            @if (ViewBag.LoginSuccess != null)
                            {
                                <div class="alert alert-success mb-3">
                                    @ViewBag.LoginSuccess
                                </div>
                            }

                            <div>
                                <div class="mb-3 text-start form-group">
                                    <label asp-for="Email" class="form-label fs-4 fw-bolder">Username</label>
                                    <input asp-for="Email" class="form-control fs-5 p-2" placeholder="Username" required
                                        style="background-color: #D9D9D9;" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-4 text-start form-group">
                                    <label asp-for="Password" class="form-label fs-4 fw-bolder">Password</label>
                                    <input asp-for="Password" type="password" class="form-control fs-5 p-2"
                                        placeholder="Password" required style="background-color: #D9D9D9;" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-4 text-start form-group">
                                    <a asp-action="ForgotPassword" asp-controller="Landing">Forgot password?</a>
                                </div>

                                <div class="mb-4 text-start form-group">
                                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-label fs-6 fw-light">Remember me</label>
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="btn w-100 fs-5 fw-bold mb-3 text-black"
                                    style="background-color: #FBAE1F;">
                                    Login
                                </button>
                            </div>
                        </form>

                        <p class="mt-3 small">
                            Don't have an account?
                            <a asp-action="Register" asp-controller="Landing">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>