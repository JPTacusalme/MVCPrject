  @{
      ViewData["Title"] = "Profile";
  }
  @section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
  }
  @section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/EditModal.js"></script>
  }

  <!-- Profile Above -->
  <div class="container-fluid py-4 justify-content-center">
    <div class="row align-items-center">
      
      <div class="col-auto" style="padding-left: 3vh;">
        <img src="~/img/image.png" class="rounded-circle" alt="Profile image" width="180" height="180">
      </div>

      <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
          <div>
            <h5 class="fw-bold mb-0 d-inline me-2">Rain Cabiella</h5>
            <small class="text-muted">@@rain.cbl</small>
          </div>
          <div class="d-flex align-items-center gap-4">
            <i data-feather="search" class="fs-5"></i>
            <i data-feather="settings" class="fs-5"></i>
            <button class="btn btn-custom-red" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit Profile</button>
          </div>
        </div>

        <p class="mt-2 mb-1"style="padding-top: 2vh">
          Hi! I'm a Filipino living in Antipolo. I love to cook and share recipes passed down from my lola.
          I'm here to spread the joy of lutong bahay. Tara, kain tayo!
        </p>

        <div class="d-flex justify-content-between align-items-center"style="padding-top: 5vh">
          <div class="d-flex gap-3">
            <span><strong>4</strong> Recipes</span>
            <span><strong>0</strong> Following</span>
            <span><strong>0</strong> Followers</span>
          </div>
          <div class="d-flex gap-4">
            <a href="#" class="text-dark"><i data-feather="link-2" class="fs-5"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- Edit Profile Modal -->
  <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4">
        <!-- Modal Header -->
        <div class="modal-header bg-danger text-white rounded-top-4">
          <h6 class="modal-title fw-semibold" id="editProfileModalLabel">Edit Profile</h6>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- Modal Body -->
        <div class="modal-body text-center px-4">
           <!-- Profile Image Placeholder -->
          <div class="mb-3 position-relative" style="width: 100px; height: 100px; margin: 0 auto;">
            
            <!-- Profile Image -->
            <div class="rounded-circle bg-secondary-subtle w-100 h-100"
                id="profileImagePreview"
                style="object-fit: cover;"></div>

            <!-- Overlay (appears on hover) -->
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center rounded-circle upload-overlay">
              <i data-feather="camera" class="text-white"></i>
            </div>

            <!-- Hidden File Input -->
            <input type="file" id="profileImageInput" accept="image/*" class="d-none" />

          </div>

          <!-- Form -->
          <form>
            <div class="mb-3 text-start">
              <label for="displayName" class="form-label small">Display Name</label>
              <input type="text" class="form-control rounded-3" id="displayName">
            </div>

            <div class="mb-3 text-start">
              <label for="username" class="form-label small">Username</label>
              <input type="text" class="form-control rounded-3" id="username">
            </div>

            <div class="mb-3 text-start">
              <label for="bio" class="form-label small">Bio</label>
              <textarea class="form-control rounded-3" id="bio" rows="3"></textarea>
            </div>

            <div class="mb-3 text-start">
              <label class="form-label small">Social Media Links</label>
                <div id="social-links">
                  <div class="input-group mb-2">
                    <input type="url" class="form-control rounded-start-3" placeholder="https://...">
                    <button type="button" class="btn btn-outline-danger rounded-end-3 remove-link-btn">
                    <i data-feather="x-circle" class="fs-5"></i>
                    </button>
                  </div>
                </div>

              <button type="button" class="btn btn-outline-secondary btn-sm mt-2" id="add-link-btn">
                <i data-feather="plus-circle" class="fs-5"></i> Add Link
              </button>
            </div>
            <!-- Save Button -->
            <div class="d-grid">
              <button type="submit" class="btn btn-danger fw-semibold rounded-3">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!---- Recipe tab -->
<div class="container-fluid border-top mt-1 pt-2">
  <h4 class="fw-bold fs-2" style="padding-left: 1.5vh; color: #EC433E;">Recipes</h4>
